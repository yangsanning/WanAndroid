<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="androidx.databinding.ObservableField" />

        <import type="ysn.com.wanandroid.widget.component.super_recycler_view.DataState" />

        <variable
            name="state"
            type="ObservableField&lt;DataState>" />

        <variable
            name="view"
            type="ysn.com.wanandroid.widget.component.super_recycler_view.SuperRecyclerView" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <include
            layout="@layout/layout_loading"
            android:visibility="@{state==DataState.LOADING? View.VISIBLE : View.GONE}" />

        <include
            layout="@layout/layout_empty"
            android:visibility="@{state==DataState.EMPTY? View.VISIBLE : View.GONE}" />

        <include
            layout="@layout/layout_error"
            android:visibility="@{state==DataState.ERROR? View.VISIBLE : View.GONE}" />
    </LinearLayout>
</layout>
